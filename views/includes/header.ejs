    <!-- Admin Login Pop up features begins -->
    <div class="popup-container1">
        <div class="popup-inner">
            <i class="fas fa-user"></i>
            <p class="admin-closing">&times;</p>
            <h2>ADMIN LOGIN</h2>
            <div class="alert">Hello</div> <!--  Alerting message -->
            <form action="/admin" method="POST">
                <div class="side-icon">
                    <i class="fas fa-user-circle"></i>
                    <input type="text" placeholder="Username / email" name="email">
                </div>
                <div class="side-icon">
                    <i class="fas fa-unlock-alt"></i>
                    <input type="password" placeholder="Password" name="password">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="submit">Sign In</button>
            </form>
            <a class="admin-reset" href="/reset">Forget Password?</a>
        </div>
    </div>
<!-- Admin Login Pop up features ends -->


    <!-- Staff Login Pop up features begins -->
    <div class="popup-container">
        <div class="popup-inner">
            <i class="fas fa-user"></i>
            <p class="staff-closing">&times;</p>
            <h2>STAFF LOGIN</h2>
            <div class="alert">Hello</div> <!--  Alerting message -->
            <form action="/login" method="POST">
                <div class="side-icon">
                    <i class="fas fa-user-circle"></i>
                    <input type="text" placeholder="Username / email" name="email">
                </div>
                <div class="side-icon">
                    <i class="fas fa-unlock-alt"></i>
                    <input type="password" placeholder="Password" name="password">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="submit">Sign In</button>
            </form>
            <a href="#">Forget Password?</a>
            <a href="#" class="signup">Sign up</a>
            <form class="email-check" action="/checkEmail" method="POST">
                <input type="email" placeholder="Please type your email" name="email">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="submit">Check Email</button>
            </form>
        </div>
    </div>
<!-- Staff Login Pop up features ends -->

<!-- new student popup -->
<div class="new-student">
    <div class="new-student-inner">
        <p class="close1">&times;</p>
        <h2>ADD A NEW STUDENT</h2>
    <form action="/createStudent" method="POST">
        <div>
            <label for="first-name">First Name*</label>
            <input type="text" placeholder="Tanko" name="firstName">
        </div>

        <div>
            <label for="last-name">Last Name*</label>
            <input type="text" placeholder="Muhammad" name="lastName">
        </div>

        <div>
            <label for="date-of-birth">Date of Birth*</label>
            <input type="date" placeholder="Student Date of Birth" name="DoB">
        </div>

        <div>
            <label for="class" name="class">Class*</label>
            <select value="class" name="class">
                <option>select a class</option>
                <option name="nursery-one">Nursery one</option>
                <option name="nursery-two">Nursery two</option>
                <option name="nursery-three">Nursery Three</option>
                <option name="primary-one">Primary one</option>
                <option name="primary-two">Primary two</option>
                <option name="primary-three">Primary three</option>
                <option name="primary-four">Primary four</option>
                <option name="primary-five">Primary five</option>
            </select>
        </div>

        <div>
            <label for="record">Students Record*</label>
            <textarea name="record" cols="30" rows="10" placeholder="Enter a students record"></textarea>
        </div>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="submit">ADD STUDENT</button>
    </form>
